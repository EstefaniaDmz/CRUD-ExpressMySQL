<%- include ../layouts/head.ejs %>
  <h1 style="text-align: center;">Hoteles <a href="/hoteles/createH" style="background-color: white;border-color: white;border-style: none;">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-plus-square text-success" viewBox="0 0 16 16">
        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
      </svg>
    </a></h1>
    <br>
  <div class="table-responsive">
    <table class="table table-bordered table-striped" style="vertical-align: middle; text-align: center;">
      <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Num. Plazas</th>
            <th>Calle</th>
            <th>Colonia</th>
            <th>CP</th>
            <th>Ciudad</th>
            <th>Estado</th>
            <th>País</th>
            <th>Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% for( let i = 0; i < hoteles.length; i++ ) { %>
        <tr>
          <td><%= hoteles[i].idHotel %></td>
          <td><%= hoteles[i].nombre %></td>
          <td><%= hoteles[i].telefono %></td>
          <td><%= hoteles[i].numeroPlazas %></td>
          <td><%= hoteles[i].calle %></td>
          <td><%= hoteles[i].colonia %></td>
          <td><%= hoteles[i].cp %></td>
          <td><%= hoteles[i].ciudad %></td>
          <td><%= hoteles[i].estado %></td>
          <td><%= hoteles[i].pais %></td>
          <td>
            <a class="btn btn-outline-warning btn-sm" href="/hoteles/editH/<%= hoteles[i].idHotel %>">Editar</a>
            <a class="btn btn-outline-danger btn-sm" type="submit" href="/hoteles/deleteH/<%= hoteles[i].idHotel %>" onclick="return confirm('¿Está seguro de eliminar el Hotel?'); false">Borrar</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
<%- include ../layouts/foot.ejs %>