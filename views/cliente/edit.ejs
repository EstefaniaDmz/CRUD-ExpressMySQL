<%- include ../layouts/head.ejs %>
<h1 style="text-align: center;">Formulario para agregar</h1>
<br>
<form action="/clientes/updateC/<%= row.idCliente %>" method="post" class="form-label" style="margin-left: 5%; margin-right: 5%;">
    <input type="hidden" name="idCliente" value="<%= row.idCliente %>">
    <h5>Nombre</h5>
    <input class="form-control" type="text" name="nombre" value="<%= row.nombre %>">
    <br>
    <h5>Apellido Paterno</h5>
    <input class="form-control" type="text" name="apellidoPaterno" value="<%= row.apellidoPaterno %>">
    <br>
    <h5>Apellido Materno</h5>
    <input class="form-control" type="text" name="apellidoMaterno" value="<%= row.apellidoMaterno %>">
    <br>
    <h5>Teléfono</h5>
    <input class="form-control" type="number" name="telefono" min="1" maxlength="10" value="<%= row.telefono %>"> 
    <br>
    <h5>Calle</h5>
    <input class="form-control" type="text" name="calle" value="<%= row.calle %>">
    <br>
    <h5>Colonia</h5>
    <input class="form-control" type="text" name="colonia" value="<%= row.colonia %>">
    <br>
    <h5>CP</h5>
    <input class="form-control" type="text" name="cp" maxlength="5" value="<%= row.cp %>">
    <br>
    <h5>Id Hotel</h5>
    <input class="form-control" type="number" min="1" name="idHotel" value="<%= row.idHotel %>">
    <br>
    <h5>Régimen hotel</h5>
    <input class="form-control" type="text" name="regimenHotel" value="<%= row.regimenHotel %>">
    <br>
    <h5>Id Sucursal</h5>
    <input class="form-control" type="number" min="1" name="idSucursal" value="<%= row.idSucursal %>">
    <br>
    <h5>Id Vuelo</h5>
    <input class="form-control" type="number" min="1" name="idVuelo" value="<%= row.idVuelo %>">
    <br>
    <h5>Clase Vuelo</h5>
    <input class="form-control" type="text" name="claseVuelo" value="<%= row.claseVuelo %>">
    <br>
    <div class="d-grid gap-2">
        <input class="btn btn-outline-primary" type="submit" value="Aceptar">
    </div>
</form>
<%- include ../layouts/foot.ejs %>